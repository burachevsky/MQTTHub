<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.github.burachevsky.mqtthub.feature.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/navigateEnterText"
            app:destination="@id/enter_text" />

        <action
            android:id="@+id/navigateTextTileDetails"
            app:destination="@id/text_tile_details" />

        <action
            android:id="@+id/navigateAddTextTile"
            app:destination="@id/addTextTileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>

        <action
            android:id="@+id/navigateAddButtonTile"
            app:destination="@id/addButtonTileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_left" />

        <action
            android:id="@+id/navigateAddSwitch"
            app:destination="@id/addSwitchFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_left" />

        <action
            android:id="@+id/navigateAddChart"
            app:destination="@id/addChartFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_left" />

        <action
            android:id="@+id/navigateAddSlider"
            app:destination="@id/addSliderFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_left"/>

    </fragment>

    <action
        android:id="@+id/navigateDashboards"
        app:destination="@id/dashboards"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out_left" />

    <action
        android:id="@+id/navigateAddBroker"
        app:destination="@id/add_broker"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out_left" />

    <action
        android:id="@+id/navigateBrokers"
        app:destination="@id/brokers"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out_left"/>

    <action
        android:id="@+id/navigateSelector"
        app:destination="@id/selector" />

    <action
        android:id="@+id/navigateSettings"
        app:destination="@id/settings"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out_left" />

    <fragment
        android:id="@+id/addTextTileFragment"
        android:name="com.github.burachevsky.mqtthub.feature.addtile.text.AddTextTileFragment"
        android:label="AddTextTileFragment"
        tools:layout="@layout/fragment_add_tile" />

    <fragment
        android:id="@+id/addButtonTileFragment"
        android:name="com.github.burachevsky.mqtthub.feature.addtile.button.AddButtonTileFragment"
        android:label="AddButtonTileFragment"
        tools:layout="@layout/fragment_add_tile" />

    <fragment
        android:id="@+id/addSwitchFragment"
        android:name="com.github.burachevsky.mqtthub.feature.addtile.switchh.AddSwitchFragment"
        android:label="AddSwitchFragment"
        tools:layout="@layout/fragment_add_tile" />

    <fragment
        android:id="@+id/addChartFragment"
        android:name="com.github.burachevsky.mqtthub.feature.addtile.chart.AddChartTileFragment"
        android:label="AddChartFragment"
        tools:layout="@layout/fragment_add_tile" />

    <fragment
        android:id="@+id/addSliderFragment"
        android:name="com.github.burachevsky.mqtthub.feature.addtile.slider.AddSliderTileFragment"
        android:label="AddSliderFragment"
        tools:layout="@layout/fragment_add_tile" />

    <include app:graph="@navigation/selector" />
    <include app:graph="@navigation/settings" />
    <include app:graph="@navigation/enter_text" />
    <include app:graph="@navigation/dashboards" />
    <include app:graph="@navigation/text_tile_details" />
    <include app:graph="@navigation/brokers" />
    <include app:graph="@navigation/add_broker" />

</navigation>