<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MQTTHub.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="labelStyle">@style/TextAppearance.MQTTHub.Label</item>
        <item name="boxStrokeColor">@color/purple_200</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.MQTTHub.Placeholder</item>
        <item name="errorTextAppearance">@style/TextAppearance.MQTTHub.SecondaryBody</item>
       <!-- <item name="errorTextColor">?android:attr/errorTextColor</item>
        <item name="boxStrokeErrorColor">?android:attr/errorTextColor</item>-->
        <!--<item name="errorIconTint">?attr/errorTextColor</item>-->
        <item name="endIconTint">@color/textSecondary</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.MQTTHub.SecondaryBody</item>
        <item name="helperTextTextColor">@color/textSecondary</item>
       <!-- <item name="errorIconDrawable">@drawable/ic_sign</item>-->
        <item name="hintTextAppearance">@style/TextAppearance.MQTTHub.Placeholder</item>
        <!--        color when InputTextLayout is not focused-->
        <item name="android:textColorHint">@color/textSecondary</item>
        <!--        color when InputTextLayout is focused-->
        <item name="hintTextColor">?android:attr/colorPrimary</item>
        <item name="editTextStyle">@style/Widget.MQTTHub.EditText</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MQTTHub.Label</item>
        <item name="android:textAppearance">@style/TextAppearance.MQTTHub.Body</item>
    </style>

    <style name="Widget.MQTTHub.EditText" parent="">
        <item name="android:textAppearance">@style/TextAppearance.MQTTHub.Body</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/purple_200</item>
        <item name="hintTextAppearance">@style/TextAppearance.MQTTHub.Label</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MQTTHub.Body</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MQTTHub.Body</item>
    </style>

</resources>